@model Nouhaila.netProjet.ViewModels.ShoppingCartViewModel
@{
    ViewData["Title"] = "Your Cart";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4 text-white"><i class="fas fa-shopping-basket text-yellow"></i> Your Basket</h2>

    @if (!Model.Items.Any())
    {
        <div class="card card-dark p-5 text-center">
            <i class="fas fa-shopping-cart fa-4x text-secondary mb-3"></i>
            <h3>Your basket is empty</h3>
            <p class="text-secondary">Explore restaurants and add some delicious food!</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary rounded-pill px-4 mt-3">Browse Restaurants</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                @foreach (var item in Model.Items)
                {
                    <div class="card card-dark mb-3 p-3">
                        <div class="d-flex align-items-center gap-3">
                            <img src="@item.Product?.ImageUrl" class="rounded" style="width: 80px; height: 80px; object-fit: cover;" />
                            <div class="flex-grow-1">
                                <h5 class="fw-bold mb-0">@item.Product?.Name</h5>
                                <p class="text-secondary small mb-0">x @item.Quantity</p>
                            </div>
                            <div class="text-end">
                                <h5 class="text-yellow fw-bold">$@(item.Product?.Price * item.Quantity)</h5>
                                <form asp-action="RemoveFromCart" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-link text-danger p-0 small">Remove</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-4">
                <div class="card card-dark p-4 shadow-lg sticky-top" style="top: 100px;">
                    <h4 class="fw-bold mb-4">Summary</h4>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Items</span>
                        <span>$@Model.TotalPrice</span>
                    </div>
                    <div class="d-flex justify-content-between mb-4">
                        <span>Delivery</span>
                        <span class="text-green">Calculated at checkout</span>
                    </div>
                    <hr class="border-secondary" />
                    <form asp-controller="Orders" asp-action="Checkout" method="post">
                        <div class="mb-3">
                            <label class="form-label small text-secondary">DELIVERY ADDRESS</label>
                            <input type="text" name="address" class="form-control bg-dark text-white border-secondary" placeholder="123 Street, City" required />
                        </div>

                        <!-- Simulated Stripe Elements -->
                        <div class="mb-4">
                            <label class="form-label text-secondary small fw-bold">PAYMENT DETAILS</label>
                            <div class="card bg-dark border-secondary p-3 rounded-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-credit-card text-secondary me-2"></i>
                                    <input type="text" class="form-control bg-transparent border-0 text-white p-0" style="box-shadow: none;" placeholder="Card number (Simulated)" />
                                </div>
                                <div class="row">
                                    <div class="col-6 border-top border-secondary pt-2">
                                        <input type="text" class="form-control bg-transparent border-0 text-white p-0 small" style="box-shadow: none;" placeholder="MM / YY" />
                                    </div>
                                    <div class="col-6 border-top border-start border-secondary pt-2">
                                        <input type="text" class="form-control bg-transparent border-0 text-white p-0 small" style="box-shadow: none;" placeholder="CVC" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Payment Method Toggle -->
                        <div class="mb-4">
                            <label class="form-label text-secondary small fw-bold">PAYMENT METHOD</label>
                            <div class="d-flex gap-2">
                                <input type="radio" class="btn-check" name="paymentMethod" id="payCard" value="CreditCard" autocomplete="off" checked>
                                <label class="btn btn-outline-secondary rounded-pill flex-grow-1" for="payCard"><i class="fas fa-credit-card me-2"></i>Card</label>

                                <input type="radio" class="btn-check" name="paymentMethod" id="payCash" value="CashOnDelivery" autocomplete="off">
                                <label class="btn btn-outline-secondary rounded-pill flex-grow-1" for="payCash"><i class="fas fa-money-bill-wave me-2"></i>Cash</label>
                            </div>
                        </div>

                        <!-- Simulated Stripe Elements (Conditional via JS) -->
                        <div id="stripeElements" class="mb-4">
                            <label class="form-label text-secondary small fw-bold">CARD DETAILS</label>
                            <div class="card bg-dark border-secondary p-3 rounded-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-credit-card text-secondary me-2"></i>
                                    <input type="text" class="form-control bg-transparent border-0 text-white p-0" style="box-shadow: none;" placeholder="Card number" />
                                </div>
                                <div class="row">
                                    <div class="col-6 border-top border-secondary pt-2">
                                        <input type="text" class="form-control bg-transparent border-0 text-white p-0 small" style="box-shadow: none;" placeholder="MM / YY" />
                                    </div>
                                    <div class="col-6 border-top border-start border-secondary pt-2">
                                        <input type="text" class="form-control bg-transparent border-0 text-white p-0 small" style="box-shadow: none;" placeholder="CVC" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Promo Code -->
                        <div class="mb-4">
                            <label class="form-label text-secondary small fw-bold">PROMO CODE</label>
                            <div class="input-group">
                                <input type="text" name="promoCode" class="form-control bg-dark text-white border-secondary" placeholder="Enter code">
                                <button class="btn btn-outline-yellow" type="button">Apply</button>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-secondary">Subtotal</span>
                            <span class="text-white">$@Model.TotalPrice</span>
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="fw-bold">Total</h5>
                            <h4 class="fw-bold text-yellow">$@Model.TotalPrice</h4>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill fw-bold text-black text-uppercase">
                            Confirm & Pay
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.querySelectorAll('input[name="paymentMethod"]').forEach(radio => {
            radio.addEventListener('change', (e) => {
                const stripeBox = document.getElementById('stripeElements');
                if (e.target.value === 'CashOnDelivery') {
                    stripeBox.style.display = 'none';
                } else {
                    stripeBox.style.display = 'block';
                }
            });
        });
    </script>
}
