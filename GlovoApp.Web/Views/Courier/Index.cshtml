@model IEnumerable<Nouhaila.netProjet.Models.Order>
@{
    ViewData["Title"] = "Courier Dashboard";
    var availableOrders = ViewBag.AvailableOrders as IEnumerable<Nouhaila.netProjet.Models.Order>;
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="fw-bold text-white">Courier Dashboard</h1>
            <p class="text-secondary text-uppercase small fw-bold tracking-wider">Order Management</p>
        </div>
        <div class="bg-dark p-3 rounded-pill border border-secondary">
            <span class="text-yellow fw-bold"><i class="fas fa-motorcycle me-2"></i>Jean Livreur</span>
        </div>
    </div>

    <div class="row">
        <!-- My Active Orders -->
        <div class="col-lg-8 mb-4">
            <h3 class="text-white fw-bold mb-4">Current Deliveries</h3>
            @if (!Model.Any())
            {
                <div class="card card-dark border-0 p-5 text-center shadow-lg">
                    <div class="opacity-25 mb-3">
                        <i class="fas fa-box-open fa-3x text-white"></i>
                    </div>
                    <p class="text-secondary">No active orders. Check the marketplace!</p>
                </div>
            }
            @foreach (var order in Model)
            {
                <div class="card card-dark border-0 shadow-lg p-4 mb-3 border-start border-yellow border-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="badge bg-yellow text-black mb-2">Order #@order.Id</span>
                            <h5 class="text-white mb-1">Customer: @order.User?.FullName</h5>
                            <p class="text-secondary small mb-0"><i class="fas fa-map-marker-alt me-1"></i> @order.DeliveryAddress</p>
                        </div>
                        <form asp-action="DeliverOrder" method="post">
                            <input type="hidden" name="orderId" value="@order.Id" />
                            <button type="submit" class="btn btn-outline-success rounded-pill px-4 fw-bold">
                                <i class="fas fa-check-circle me-1"></i> Mark as Delivered
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>

        <!-- Marketplace (Available Orders) -->
        <div class="col-lg-4">
            <h3 class="text-yellow fw-bold mb-4">Marketplace</h3>
            @if (availableOrders == null || !availableOrders.Any())
            {
                <div class="card card-dark border-0 p-4 text-center">
                    <p class="text-secondary small">No available orders right now.</p>
                </div>
            }
            @foreach (var order in availableOrders ?? Enumerable.Empty<Nouhaila.netProjet.Models.Order>())
            {
                <div class="card card-dark border-0 shadow p-3 mb-2">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <span class="small fw-bold text-secondary">#@order.Id</span>
                        <span class="text-yellow fw-bold">$@order.TotalPrice</span>
                    </div>
                    <p class="text-white small mb-3"><i class="fas fa-map-marker-alt me-1 text-secondary"></i> @order.DeliveryAddress</p>
                    <form asp-action="AcceptOrder" method="post">
                        <input type="hidden" name="orderId" value="@order.Id" />
                        <button type="submit" class="btn btn-primary btn-sm rounded-pill w-100 fw-bold text-black">Accept Delivery</button>
                    </form>
                </div>
            }
        </div>
    </div>
</div>
