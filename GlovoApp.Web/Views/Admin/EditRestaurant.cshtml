@model Nouhaila.netProjet.Models.Restaurant
@{
    ViewData["Title"] = "Edit Restaurant";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card card-dark p-4 shadow-lg border-0">
                <h2 class="fw-bold text-white mb-4">Edit Restaurant: @Model.Name</h2>
                
                <form asp-action="EditRestaurant" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label text-secondary small fw-bold uppercase">Restaurant Name</label>
                        <input asp-for="Name" class="form-control bg-dark text-white border-secondary" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label text-secondary small fw-bold uppercase">Description</label>
                        <textarea asp-for="Description" class="form-control bg-dark text-white border-secondary" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CategoryId" class="form-label text-secondary small fw-bold uppercase">Category</label>
                            <select asp-for="CategoryId" class="form-select bg-dark text-white border-secondary" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ImageUrl" class="form-label text-secondary small fw-bold uppercase">Image URL</label>
                            <input asp-for="ImageUrl" class="form-control bg-dark text-white border-secondary" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DeliveryTimeRange" class="form-label text-secondary small fw-bold uppercase">Delivery Time</label>
                            <input asp-for="DeliveryTimeRange" class="form-control bg-dark text-white border-secondary" />
                            <span asp-validation-for="DeliveryTimeRange" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DeliveryFee" class="form-label text-secondary small fw-bold uppercase">Delivery Fee ($)</label>
                            <input asp-for="DeliveryFee" class="form-control bg-dark text-white border-secondary" step="0.01" />
                            <span asp-validation-for="DeliveryFee" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2 pt-3">
                        <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold text-black">Update Restaurant</button>
                        <a asp-action="Restaurants" class="btn btn-outline-light rounded-pill px-4">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
