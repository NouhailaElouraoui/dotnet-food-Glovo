@model IEnumerable<Nouhaila.netProjet.Models.Category>
@{
    ViewData["Title"] = "Manage Categories";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5 animate-fade-up">
        <div>
            <h2 class="fw-bold text-white mb-1">Catalog Categories</h2>
            <p class="text-muted mb-0">Organize your offerings by defining clear categories.</p>
        </div>
        <a asp-action="CreateCategory" class="btn btn-yellow rounded-pill px-4 shadow-sm"><i class="fas fa-plus me-2"></i>New Category</a>
    </div>

    <div class="card card-dark border-0 shadow-lg p-0 overflow-hidden animate-fade-up delay-1">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead class="bg-black bg-opacity-50">
                    <tr class="text-muted smaller text-uppercase ls-wide">
                        <th class="border-0 px-4 py-3">Visual</th>
                        <th class="border-0 py-3">Identifier Name</th>
                        <th class="border-0 py-3 text-end px-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="px-4">
                                <div class="bg-secondary bg-opacity-25 rounded-3 p-1 d-inline-block">
                                    <img src="@item.ImageUrl" class="rounded" style="width: 45px; height: 45px; object-fit: cover;">
                                </div>
                            </td>
                            <td><span class="fw-bold text-white">@item.Name</span></td>
                            <td class="text-end px-4">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-dark border-secondary rounded-start-pill px-3"><i class="fas fa-edit me-1 text-yellow"></i> Edit</a>
                                    <form asp-action="DeleteCategory" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Delete this category? This might affect restaurants!');" style="display:inline;">
                                        <button type="submit" class="btn btn-dark border-secondary rounded-end-pill px-3 text-danger"><i class="fas fa-trash me-1"></i> Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-4 animate-fade-up delay-2">
        <a asp-action="Index" class="btn btn-link text-muted text-decoration-none small"><i class="fas fa-arrow-left me-2"></i>Back to Dashboard</a>
    </div>
</div>
