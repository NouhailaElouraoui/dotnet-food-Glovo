@model IEnumerable<Nouhaila.netProjet.Models.Restaurant>
@{
    ViewData["Title"] = "Manage Restaurants";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-white">Manage Restaurants</h2>
        <a asp-action="CreateRestaurant" class="btn btn-primary rounded-pill"><i class="fas fa-plus me-2"></i>New Restaurant</a>
    </div>

    <div class="card card-dark border-0 shadow-lg p-4">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Rating</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="@item.ImageUrl" class="rounded" style="width: 50px; height: 50px; object-fit: cover;"></td>
                            <td><span class="fw-bold">@item.Name</span></td>
                            <td>@item.Category?.Name</td>
                            <td><i class="fas fa-star text-yellow me-1"></i> @item.Rating</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="ManageMenu" asp-route-restaurantId="@item.Id" class="btn btn-outline-warning">Menu</a>
                                    <a asp-action="EditRestaurant" asp-route-id="@item.Id" class="btn btn-outline-light"><i class="fas fa-edit"></i></a>
                                    <form asp-action="DeleteRestaurant" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this restaurant?');" style="display:inline;">
                                        <button type="submit" class="btn btn-outline-danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
