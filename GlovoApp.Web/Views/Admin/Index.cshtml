@using Nouhaila.netProjet.Models
@model Nouhaila.netProjet.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4 px-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-5 animate-fade-up">
        <div>
            <h1 class="fw-bold text-white mb-1">Control Center</h1>
            <p class="text-muted mb-0">Overview of Glovo operations and performance.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Restaurants" class="btn btn-outline-light rounded-pill px-4"><i class="fas fa-store me-2 text-yellow"></i>Restaurants</a>
            <a asp-action="Categories" class="btn btn-outline-light rounded-pill px-4"><i class="fas fa-list me-2 text-green"></i>Categories</a>
            <a asp-action="Promotions" class="btn btn-yellow rounded-pill px-4 shadow-sm"><i class="fas fa-tags me-2"></i>Promotions</a>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="row g-4 mb-5 animate-fade-up delay-1">
        <div class="col-md-3">
            <div class="card card-dark p-4 border-0 shadow-lg text-start position-relative overflow-hidden">
                <div class="z-1 position-relative">
                    <h6 class="text-muted text-uppercase smaller fw-bold mb-3 ls-wide">Total Revenue</h6>
                    <h2 class="text-white fw-bold mb-1">$@Model.TotalRevenue.ToString("N0")</h2>
                    <span class="text-green small fw-bold">+$@Model.RevenueToday.ToString("N0") <span class="text-muted fw-normal">today</span></span>
                </div>
                <i class="fas fa-dollar-sign position-absolute end-0 bottom-0 m-3 opacity-10 display-4"></i>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-dark p-4 border-0 shadow-lg text-start position-relative overflow-hidden">
                <div class="z-1 position-relative">
                    <h6 class="text-muted text-uppercase smaller fw-bold mb-3 ls-wide">Active Orders</h6>
                    <h2 class="text-white fw-bold mb-1">@Model.TotalOrders</h2>
                    <span class="text-yellow small fw-bold">@Model.PendingOrders <span class="text-muted fw-normal">pending</span></span>
                </div>
                <i class="fas fa-shopping-bag position-absolute end-0 bottom-0 m-3 opacity-10 display-4"></i>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-dark p-4 border-0 shadow-lg text-start position-relative overflow-hidden">
                <div class="z-1 position-relative">
                    <h6 class="text-muted text-uppercase smaller fw-bold mb-3 ls-wide">User Base</h6>
                    <h2 class="text-white fw-bold mb-1">@Model.TotalUsers</h2>
                    <span class="text-muted small">Registered customers</span>
                </div>
                <i class="fas fa-users position-absolute end-0 bottom-0 m-3 opacity-10 display-4"></i>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-dark p-4 border-0 shadow-lg text-start position-relative overflow-hidden">
                <div class="z-1 position-relative">
                    <h6 class="text-muted text-uppercase smaller fw-bold mb-3 ls-wide">Avg Order Value</h6>
                    <h2 class="text-white fw-bold mb-1">$@Model.AverageOrderValue.ToString("F2")</h2>
                    <span class="text-muted small">Consistency score</span>
                </div>
                <i class="fas fa-chart-line position-absolute end-0 bottom-0 m-3 opacity-10 display-4"></i>
            </div>
        </div>
    </div>

    <!-- Insights Row -->
    <div class="row g-4 mb-5 animate-fade-up delay-2">
        <div class="col-lg-8">
            <div class="card card-dark p-4 border-0 shadow-lg h-100">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="fw-bold text-white mb-0">Performance Insights</h5>
                    <span class="badge bg-dark border border-secondary text-muted">Last 7 Days</span>
                </div>
                <div style="height: 300px;">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card card-dark p-4 border-0 shadow-lg h-100">
                <h5 class="fw-bold text-white mb-4">Operations Metrics</h5>
                <div class="mb-4">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="small text-muted">Loyalty Points Circulated</span>
                        <span class="small fw-bold text-yellow">@Model.LoyaltyPointsDistributed</span>
                    </div>
                    <div class="progress bg-secondary bg-opacity-25" style="height: 6px;">
                        <div class="progress-bar bg-yellow" style="width: 75%"></div>
                    </div>
                </div>
                <div class="mb-4">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="small text-muted">Delivery Completion Rate</span>
                        <span class="small fw-bold text-green">98.2%</span>
                    </div>
                    <div class="progress bg-secondary bg-opacity-25" style="height: 6px;">
                        <div class="progress-bar bg-green" style="width: 98%"></div>
                    </div>
                </div>
                <div class="mt-auto">
                    <div class="p-3 bg-dark-glass rounded-3 border border-secondary border-opacity-25 text-center">
                        <p class="small text-muted mb-0">Platform health is **Optimal**</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="card card-dark p-4 border-0 shadow-lg animate-fade-up delay-3">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h5 class="fw-bold text-white mb-0">Real-time Order Stream</h5>
            <button class="btn btn-dark btn-sm rounded-pill px-3 border-secondary">View All Log</button>
        </div>
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead class="bg-black bg-opacity-50">
                    <tr class="text-muted smaller text-uppercase ls-wide">
                        <th class="border-0 px-4 py-3">Reference</th>
                        <th class="border-0 py-3">Customer</th>
                        <th class="border-0 py-3">Amount</th>
                        <th class="border-0 py-3">Live Status</th>
                        <th class="border-0 py-3">Timestamp</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.LatestOrders)
                    {
                        <tr>
                            <td class="px-4 fw-bold">#ORD-@order.Id.ToString("D5")</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-secondary bg-opacity-25 rounded-circle p-2 me-2">
                                        <i class="fas fa-user-circle text-muted"></i>
                                    </div>
                                    <span class="small">@order.User?.Email</span>
                                </div>
                            </td>
                            <td class="fw-bold text-white">$@order.TotalPrice.ToString("F2")</td>
                            <td>
                                <form asp-action="UpdateOrderStatus" method="post">
                                    <input type="hidden" name="orderId" value="@order.Id" />
                                    <select name="status" class="form-select form-select-sm bg-dark text-white border-0 rounded-pill px-3" 
                                            onchange="this.form.submit()" style="width: 140px; cursor: pointer;">
                                        @foreach (OrderStatus s in Enum.GetValues(typeof(OrderStatus)))
                                        {
                                            <option value="@s" selected="@(order.Status == s)">@s</option>
                                        }
                                    </select>
                                </form>
                            </td>
                            <td class="text-muted small">@order.CreatedAt.ToString("MMM dd, HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('revenueChart').getContext('2d');
        const labels = @Html.Raw(ViewBag.ChartLabels);
        const data = @Html.Raw(Model.DailyRevenueJson);
        const orderData = @Html.Raw(Model.DailyOrdersJson);

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Daily Revenue ($)',
                        data: data,
                        borderColor: '#ffcc00',
                        backgroundColor: 'rgba(255, 204, 0, 0.1)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#ffcc00',
                        pointBorderColor: '#070707',
                        pointBorderWidth: 2,
                        pointRadius: 5
                    },
                    {
                        label: 'Orders',
                        data: orderData,
                        borderColor: '#00ff9d',
                        borderWidth: 2,
                        tension: 0.4,
                        fill: false,
                        yAxisID: 'y1'
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                interaction: {
                    mode: 'index',
                    intersect: false,
                },
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            color: '#ffffff',
                            usePointStyle: true,
                            font: { family: 'Poppins', size: 12, weight: 'bold' }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: 'rgba(255,255,255,0.1)' },
                        ticks: { color: '#ffffff', font: { weight: 'bold' } }
                    },
                    y1: {
                        beginAtZero: true,
                        position: 'right',
                        grid: { display: false },
                        ticks: { display: false }
                    },
                    x: {
                        grid: { display: false },
                        ticks: { color: '#ffffff', font: { weight: 'bold' } }
                    }
                }
            }
        });
    </script>
}
