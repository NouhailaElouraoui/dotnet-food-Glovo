@model Nouhaila.netProjet.Models.Promotion
@{
    ViewData["Title"] = "Create Promotion";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card card-dark p-4 shadow-lg border-0">
                <h2 class="fw-bold text-white mb-4">Add New Promotion</h2>
                
                <form asp-action="CreatePromotion" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Code" class="form-label text-secondary small fw-bold uppercase">Promo Code</label>
                            <input asp-for="Code" class="form-control bg-dark text-white border-secondary" placeholder="GLOVO25" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DiscountPercentage" class="form-label text-secondary small fw-bold uppercase">Discount (%)</label>
                            <input asp-for="DiscountPercentage" class="form-control bg-dark text-white border-secondary" type="number" />
                            <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label text-secondary small fw-bold uppercase">Description</label>
                        <textarea asp-for="Description" class="form-control bg-dark text-white border-secondary" rows="2"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label text-secondary small fw-bold uppercase">Banner Image URL</label>
                        <input asp-for="ImageUrl" class="form-control bg-dark text-white border-secondary" placeholder="https://..." />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2 pt-3">
                        <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold text-black">Create Promo</button>
                        <a asp-action="Promotions" class="btn btn-outline-light rounded-pill px-4">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
