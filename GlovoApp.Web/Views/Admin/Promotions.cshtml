@model IEnumerable<Nouhaila.netProjet.Models.Promotion>
@{
    ViewData["Title"] = "Manage Promotions";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-white">Manage Promotions</h2>
        <a asp-action="CreatePromotion" class="btn btn-primary rounded-pill"><i class="fas fa-plus me-2"></i>New Promotion</a>
    </div>

    <div class="card card-dark border-0 shadow-lg p-4">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Code</th>
                        <th>Discount</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="@item.ImageUrl" class="rounded" style="width: 80px; height: 50px; object-fit: cover;"></td>
                            <td><span class="badge bg-yellow text-black fw-bold">@item.Code</span></td>
                            <td><span class="text-yellow fw-bold">@item.DiscountPercentage%</span></td>
                            <td><span class="small">@item.Description</span></td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditPromotion" asp-route-id="@item.Id" class="btn btn-outline-light"><i class="fas fa-edit"></i></a>
                                    <form asp-action="DeletePromotion" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Delete this promotion?');" style="display:inline;">
                                        <button type="submit" class="btn btn-outline-danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
