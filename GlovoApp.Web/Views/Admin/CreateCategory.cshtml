@model Nouhaila.netProjet.Models.Category
@{
    ViewData["Title"] = "Create Category";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 animate-fade-up">
            <div class="card card-dark p-5 shadow-lg border-0 rounded-4">
                <div class="text-center mb-4">
                    <div class="bg-yellow d-inline-block rounded-circle p-3 mb-3 shadow-glow">
                        <i class="fas fa-plus fa-2x text-black"></i>
                    </div>
                    <h2 class="fw-bold text-white">Add New Category</h2>
                    <p class="text-muted small">Expand the GlovoPro catalog with a new category.</p>
                </div>
                
                <form asp-action="CreateCategory" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                    
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label text-muted smaller text-uppercase ls-wide fw-bold mb-2">Category Identity</label>
                        <input asp-for="Name" class="form-control bg-dark text-white border-0 border-bottom border-secondary rounded-0 px-0 py-2" 
                               placeholder="e.g. Italian, Grocery, Pharmacy" style="box-shadow: none;" />
                        <span asp-validation-for="Name" class="text-danger smaller"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ImageUrl" class="form-label text-muted smaller text-uppercase ls-wide fw-bold mb-2">Visual Icon URL</label>
                        <input asp-for="ImageUrl" class="form-control bg-dark text-white border-0 border-bottom border-secondary rounded-0 px-0 py-2" 
                               placeholder="https://..." style="box-shadow: none;" />
                        <span asp-validation-for="ImageUrl" class="text-danger smaller"></span>
                    </div>

                    <div class="d-grid gap-2 pt-4">
                        <button type="submit" class="btn btn-yellow rounded-pill py-3 fw-bold shadow-sm">Initialize Category</button>
                        <a asp-action="Categories" class="btn btn-link text-muted text-decoration-none small">Cancel and Return</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
