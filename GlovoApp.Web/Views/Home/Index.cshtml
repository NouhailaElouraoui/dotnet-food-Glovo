@model Nouhaila.netProjet.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section / Search -->
<div class="hero-section text-center mb-5 rounded-4 position-relative overflow-hidden shadow-lg animate-fade-up" 
     style="background: url('/images/hero_bg.png') center/cover no-repeat; padding: 120px 20px; min-height: 500px;">
    <!-- Darker overlay for better text readability -->
    <div class="position-absolute top-0 start-0 w-100 h-100" 
         style="background: linear-gradient(180deg, rgba(71, 0, 0, 0.4) 0%, rgba(53, 0, 0, 0.8) 100%);"></div>
    
    <div class="content z-1 position-relative">
        <h1 class="display-2 fw-bold text-white mb-2 animate-fade-up delay-1">
            Anything you need <span class="text-yellow animate-float d-inline-block">delivered.</span>
        </h1>
        <p class="lead text-light mb-5 animate-fade-up delay-2 opacity-75" style="font-size: 1.5rem;">
            Discover the best local flavors delivered with precision.
        </p>

    </div>
</div>

<!-- Advanced Filters -->
<div class="container mb-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 p-3 bg-dark-glass rounded-4 border border-secondary shadow-sm">
        <div class="d-flex align-items-center gap-2 overflow-auto no-scrollbar">
            <button class="btn btn-outline-secondary rounded-pill btn-sm fw-bold px-3 active"><i class="fas fa-th-large me-1"></i> All</button>
            <button class="btn btn-outline-secondary rounded-pill btn-sm fw-bold px-3"><i class="fas fa-percentage me-1"></i> Offers</button>
            <button class="btn btn-outline-secondary rounded-pill btn-sm fw-bold px-3"><i class="fas fa-star me-1"></i> Top Rated</button>
            <button class="btn btn-outline-secondary rounded-pill btn-sm fw-bold px-3"><i class="fas fa-truck-loading me-1"></i> Free Delivery</button>
        </div>
        
        <div class="dropdown">
            <button class="btn btn-dark border-secondary rounded-pill btn-sm dropdown-toggle px-3" data-bs-toggle="dropdown">
                Sort by: Featured
            </button>
            <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end shadow-lg border-secondary">
                <li><a class="dropdown-item active" href="#">Featured</a></li>
                <li><a class="dropdown-item" href="#">Rating: High to Low</a></li>
                <li><a class="dropdown-item" href="#">Price: Low to High</a></li>
                <li><a class="dropdown-item" href="#">Delivery Time</a></li>
            </ul>
        </div>
    </div>
</div>

<!-- Categories (Premium Styled) -->
<div class="container mb-5 animate-fade-up delay-2">
    <h3 class="fw-bold text-white text-center mb-4"><i class="fas fa-utensils me-2 text-yellow"></i>Browse by Category</h3>
    <div class="d-flex justify-content-center flex-wrap gap-4">
        @foreach (var cat in Model.Categories)
        {
            <div class="category-card-premium text-center" onclick="location.href='#'">
                <div class="icon-holder mb-2 shadow">
                    <img src="@cat.ImageUrl" alt="@cat.Name" />
                </div>
                <span class="small fw-bold text-white">@cat.Name</span>
            </div>
        }
    </div>
</div>

<!-- Popular Restaurants -->
<div class="container pb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-white"><i class="fas fa-fire text-orange me-2"></i>Trending Right Now</h3>
        <a href="#" class="btn btn-link text-green text-decoration-none fw-bold">See all <i class="fas fa-chevron-right ms-1"></i></a>
    </div>

    <div class="row g-4">
        @{ int idx = 0; }
        @foreach (var rest in Model.PopularRestaurants)
        {
            var delayClass = idx < 4 ? $"delay-{idx % 4 + 1}" : "delay-1";
            idx++;
            <div class="col-md-3 col-sm-6 animate-fade-up @delayClass">
                <div class="card card-dark h-100 border-0 shadow-sm hover-lift" onclick="location.href='@Url.Action("Details", "Restaurants", new { id = rest.Id })'" style="cursor: pointer;">
                    <div class="position-relative overflow-hidden rounded-top-3">
                        <img src="@rest.ImageUrl" class="card-img-top" alt="@rest.Name" style="transition: transform 0.5s ease;">
                        <span class="badge bg-green position-absolute top-0 end-0 m-2 badge-custom shadow">
                            <i class="fas fa-clock"></i> @rest.DeliveryTimeRange
                        </span>
                        @if(rest.DeliveryFee == 0) {
                             <span class="badge bg-yellow position-absolute top-0 start-0 m-2 badge-custom text-black shadow">
                                <i class="fas fa-bolt me-1"></i> FREE
                            </span>
                        }
                    </div>
                    <div class="card-body p-3">
                        <div class="d-flex justify-content-between align-items-start mb-1">
                            <h5 class="card-title fw-bold mb-0 text-white">@rest.Name</h5>
                            <span class="badge bg-dark border border-secondary text-yellow badge-custom px-2"><i class="fas fa-star me-1"></i> @rest.Rating</span>
                        </div>
                        <p class="card-text small text-secondary mb-3">
                             @rest.Category?.Name
                        </p>
                        <div class="d-flex justify-content-between align-items-center pt-2 border-top border-secondary border-opacity-25">
                            <span class="small text-secondary">
                                <i class="fas fa-bicycle me-1"></i>
                                @if(rest.DeliveryFee == 0) { <span class="text-green fw-bold">Free</span> } else { <span>$@rest.DeliveryFee</span> }
                            </span>
                            <span class="text-yellow small fw-bold">Menu <i class="fas fa-chevron-right ms-1"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
